generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@beenest/contact-db"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id Int @id @default(autoincrement())

  name String @unique
}

model Contact {
  id Int @id @default(autoincrement())

  emails Email[]
}

model Email {
  id Int @id @default(autoincrement())

  email String @unique

  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  contactId Int
}
